{
  "manifest_version": 3,
  "name": "thugware for zoom and google meets",
  "description": "easily troll friends in chats in all meets",
  "version": "1.0",
  "icons": {
    "16": "icons/logo.jpg",
    "48": "icons/logo.jpg",
    "128": "icons/optional.jpg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click me!",
    "default_icon": {
      "48": "icons/logo.jpg",
      "128": "icons/optional.jpg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "thugWare@extension",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "permissions": ["activeTab", "scripting"]
}
